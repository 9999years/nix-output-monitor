cabal-version:      2.4
name:               nix-output-monitor
version:            1.0.5.0
synopsis:           Parses output of nix-build to show additional information
description:
  A tool you can pipe stdout and stderr into to get your terminal output enriched with useful information.

homepage:           https://github.com/maralorn/nix-output-monitor
bug-reports:        https://github.com/maralorn/nix-output-monitor/issues
license:            AGPL-3.0-or-later
license-file:       LICENSE
author:             Malte Brandy <malte.brandy@maralorn.de>
maintainer:         Malte Brandy <malte.brandy@maralorn.de>
build-type:         Simple
extra-source-files: CHANGELOG.md

common common-config
  default-extensions:
    BangPatterns
    BlockArguments
    ConstraintKinds
    DeriveAnyClass
    DeriveGeneric
    DeriveFunctor
    DataKinds
    DerivingStrategies
    DuplicateRecordFields
    FlexibleContexts
    GeneralizedNewtypeDeriving
    KindSignatures
    LambdaCase
    NamedFieldPuns
    NoImplicitPrelude
    OverloadedStrings
    PartialTypeSignatures
    RankNTypes
    RecordWildCards
    ScopedTypeVariables
    TupleSections
    TypeApplications
    ViewPatterns

  build-depends:
    , ansi-terminal
    , async
    , attoparsec
    , base
    , cassava
    , containers
    , data-default
    , directory
    , filepath
    , generic-optics
    , lock-file
    , MemoTrie
    , mtl
    , nix-derivation
    , optics
    , random
    , relude
    , stm
    , streamly < 0.8
    , terminal-size
    , text
    , time
    , unix
    , vector
    , wcwidth

  default-language:   Haskell2010
  ghc-options:        -Wall

library
  import:          common-config
  hs-source-dirs:  src
  exposed-modules:
    NOM.Debug
    NOM.IO
    NOM.Parser
    NOM.Print
    NOM.Print.Table
    NOM.Print.Tree
    NOM.State
    NOM.State.Tree
    NOM.Update
    NOM.Update.Monad
    NOM.Update.Monad.CacheBuildReports
    NOM.Util

common exes
  import:      common-config
  ghc-options: -threaded

executable nom
  import:        exes
  main-is:       bin/Main.hs
  other-modules: Paths_nix_output_monitor
  build-depends: nix-output-monitor

common tests
  import:        exes
  build-depends:
    , HUnit
    , process
    , nix-output-monitor

test-suite unit-tests
  import:  tests
  type:    exitcode-stdio-1.0
  hs-source-dirs: test
  main-is: Property.hs

test-suite golden-tests
  import:         tests
  hs-source-dirs: test
  type:           exitcode-stdio-1.0
  main-is:        Golden.hs
